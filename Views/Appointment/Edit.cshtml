@model Appointmentschedular.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment";
}

<h2>Edit Appointment</h2>

<form method="post">
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" />
    </div>
    <div class="form-group">
        <label for="Service">Service</label>
        <input type="text" class="form-control" id="Service" name="Service" value="@Model.Service" />
    </div>
    <div class="form-group">
        <label for="User">User</label>
        <input type="text" class="form-control" id="User" name="User" value="@Model.User" />
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input type="date" class="form-control" id="Date" name="Date" value="@Model.Date.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="Time">Time</label>
        <input type="time" class="form-control" id="Time" name="Time" value="@Model.Time.ToString(@"hh\:mm")" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
