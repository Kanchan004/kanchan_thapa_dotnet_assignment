@model Appointmentschedular.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<h3>Are you sure you want to delete this appointment?</h3>

<div>
    <h4>@Model.Description</h4>
    <p><strong>Service:</strong> @Model.Service</p>
    <p><strong>User:</strong> @Model.User</p>
    <p><strong>Date:</strong> @Model.Date</p>
    <p><strong>Time:</strong> @Model.Time</p>
</div>

<!-- Confirm deletion by submitting the form -->
<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
